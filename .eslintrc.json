// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ],
  "rules": {
    "func-names": [
      "error",
      "never"
    ],
    "no-console": "off",
    "no-mixed-operators": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-alert": "off",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "prefer-template": "off",
    "default-case": "off",
    "array-callback-return": "off",
    "no-underscore-dangle": "off"
  },
  "comma-dangle": 0
}
